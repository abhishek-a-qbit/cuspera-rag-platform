{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python -u api_backend_simple.py",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "readiness": {
        "path": "/health",
        "initialDelaySeconds": 30,
        "periodSeconds": 10,
        "timeoutSeconds": 5
      }
    }
  }
}
